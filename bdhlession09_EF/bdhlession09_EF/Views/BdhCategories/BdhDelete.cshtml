@model bdhlession09_EF.Models.Category

@{
    ViewData["Title"] = "Xóa thông tin danh mục loại";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>


<<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h2 class="my-2">@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <div class="form-group my-2">
                    <label><strong>Mã loại:</strong></label>
                    <p class="form-control-plaintext">@Html.DisplayFor(model => model.CategoryId)</p>
                </div>
                <div class="form-group my-2">
                    <label><strong>Tên loại:</strong></label>
                    <p class="form-control-plaintext">@Html.DisplayFor(model => model.CategoryName)</p>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a asp-action="BdhIndex" asp-route-BdhId="@Model.CategoryId" class="btn btn-primary">Xóa</a>
                <a asp-action="BdhIndex" class="btn btn-danger">Quay lại</a>
            </div>
        </div>
    </div>
</div>