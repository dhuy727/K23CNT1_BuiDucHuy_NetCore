@model bdhlession09_EF.Models.Category

@{
    ViewData["Title"] = "Chỉnh sửa dnah mục loại";
}
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <form form asp-action="BdhEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-header">
                    <h1 class="my-2">@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    <div class="form-group my-1">
                        <label asp-for="CategoryId" class="control-label mb-1"></label>
                        <input asp-for="CategoryId" class="form-control" readonly/>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group my-1">
                        <label asp-for="CategoryName" class="control-label mb-1"></label>
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group my-2">
                        <input type="submit" value="Sửa" name="btnBdhEdit" class="btn btn-primary" />
                        <a asp-action="BdhIndex" class="btn btn-danger">Quay lại</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
