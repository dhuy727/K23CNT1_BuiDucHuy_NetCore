@model IEnumerable<bdhlession09_EF.Models.Category>

@{
    ViewData["Title"] = "BdhIndex";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<p>
    <div class="d-flex justify-content-between align-items-center my-3">
        <form class="d-flex w-50" role="search" asp-action="BdhIndex" method="get">
            <input class="form-control me-2" type="search" placeholder="Tìm kiếm..." aria-label="Search" name="keyword" />
            <button class="btn btn-success" type="submit">
                <i class="bi bi-search"></i> Tìm
            </button>
        </form>
        <a asp-action="BdhCreate" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Thêm mới
        </a>
    </div>
</p>
<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th class="text-center">Chức năng </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td class="text-center">
                <a asp-action="BdhEdit" asp-route-bdhid="@item.CategoryId" class="btn btn-primary">Sửa</a> |
                <a asp-action="BdhDetails" asp-route-bdhid="@item.CategoryId" class="btn btn-info">Xem</a> |
                <a asp-action="BdhDelete" asp-route-bdhid="@item.CategoryId" class="btn btn-danger">Xóa</a>
            </td>
        </tr>
}
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3">Tổng số @Model.Count() </th>
        </tr>
    </tfoot>
</table>
