@model bdhlession09_EF.Models.Publisher

@{
    ViewData["Title"] = "Xoá nhà xuất bản";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h2 class="my-2">@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <p class="text-danger fw-bold">Bạn có chắc chắn muốn xoá nhà xuất bản sau?</p>

                <div class="form-group my-2">
                    <label><strong>Tên nhà xuất bản:</strong></label>
                    <p class="form-control-plaintext">@Html.DisplayFor(model => model.PublisherName)</p>
                </div>
                <div class="form-group my-2">
                    <label><strong>Số điện thoại:</strong></label>
                    <p class="form-control-plaintext">@Html.DisplayFor(model => model.Phone)</p>
                </div>
                <div class="form-group my-2">
                    <label><strong>Địa chỉ:</strong></label>
                    <p class="form-control-plaintext">@Html.DisplayFor(model => model.Address)</p>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <form asp-action="BdhDelete" method="post">
                    <input type="hidden" asp-for="PublisherId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Xoá
                    </button>
                </form>
                <a asp-action="BdhIndex" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>
