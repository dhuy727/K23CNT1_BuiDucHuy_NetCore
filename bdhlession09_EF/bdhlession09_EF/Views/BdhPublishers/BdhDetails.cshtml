@model bdhlession09_EF.Models.Publisher
@{
    ViewData["Title"] = "Chi tiết nhà xuất bản";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h2 class="my-2">@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <div class="form-group my-2">
                    <label><strong>Tên nhà xuất bản:</strong></label>
                    <p class="form-control-plaintext">@Model.PublisherName</p>
                </div>
                <div class="form-group my-2">
                    <label><strong>Điện thoại:</strong></label>
                    <p class="form-control-plaintext">@Model.Phone</p>
                </div>
                <div class="form-group my-2">
                    <label><strong>Địa chỉ:</strong></label>
                    <p class="form-control-plaintext">@Model.Address</p>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model.PublisherId" class="btn btn-primary">Sửa</a>
                <a asp-action="Index" class="btn btn-danger">Quay lại</a>
            </div>
        </div>
    </div>
</div>
